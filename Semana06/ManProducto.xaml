<Window x:Class="Semana06.ManProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana06"
        mc:Ignorable="d"
        Title="ManProducto" Height="800" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid Height="800" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label>ID</Label>
        <TextBox x:Name="txtId" Grid.Column="1" Margin="0,0,0,10" />
        
        <Label Grid.Row="1">Nombre</Label>
        <TextBox x:Name="txtNombre" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" />

        <Label Grid.Row="2">Proveedor</Label>
        <TextBox x:Name="txtProveedor" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" />

        <Label Grid.Row="3">Categoria</Label>
        <TextBox x:Name="txtCategoria" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" />

        <Label Grid.Row="4">CantidadUnidad</Label>
        <TextBox x:Name="txtCantUni" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" />

        <Label Grid.Row="5">PrecioUnidad</Label>
        <TextBox x:Name="txtPrecUni" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10" />

        <Label Grid.Row="6">UnidadExistente</Label>
        <TextBox x:Name="txtUniExist" Grid.Row="6" Grid.Column="1" Margin="0,0,0,10" />

        <Label Grid.Row="7">UnidadPedido</Label>
        <TextBox x:Name="txtUnidPed" Grid.Row="7" Grid.Column="1" Margin="0,0,0,10" />

        <Label Grid.Row="8">NivelPedido</Label>
        <TextBox x:Name="txtNivelPedido" Grid.Row="8" Grid.Column="1" Margin="0,0,0,10" />

        <Label Grid.Row="9">Suspendido</Label>
        <TextBox x:Name="txtSuspendido" Grid.Row="9" Grid.Column="1" Margin="0,0,0,10" />

        <Label Grid.Row="10">CategoriaProducto</Label>
        <TextBox x:Name="txtCatProd" Grid.Row="10" Grid.Column="1" Margin="0,0,0,10" />



        
        
        <Button Grid.Row="11" x:Name="btnGrabar" Click="BtnGrabar_Click" >Grabar</Button>
        <Button Grid.Row="12" x:Name="btnEliminar" Click="BtnEliminar_Click"  >Eliminar</Button>
        <Button Grid.Row="13" x:Name="btnCerrar" Click="BtnCerrar_Click"  >Cerrar</Button>

    </Grid>
</Window>
